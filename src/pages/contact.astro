---
/**
 * Contact Page
 * Business contact information and ways to get in touch
 */

import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout
  title="Contact - In Focus with Jodi"
  description="Get in touch with In Focus with Jodi for inquiries, bookings, or questions about our services."
>
  <div class="contact-page">
    <!-- Page Header -->
    <section class="page-header">
      <div class="header-container">
        <h1 class="page-title">Get in Touch</h1>
        <p class="page-description">
          Have questions or ready to book a session? I'd love to hear from you.
        </p>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="contact-section">
      <div class="contact-container">
        <div class="contact-grid">
          <!-- Contact Cards -->
          <div class="contact-cards">
            <div class="contact-card">
              <div class="card-icon" aria-hidden="true">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h2 class="card-title">Email</h2>
              <p class="card-content">
                <a href="mailto:hello@jodiphotography.com" class="contact-link">
                  hello@jodiphotography.com
                </a>
              </p>
              <p class="card-description">
                Send me an email anytime. I typically respond within 24 hours.
              </p>
            </div>

            <div class="contact-card">
              <div class="card-icon" aria-hidden="true">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <h2 class="card-title">Phone</h2>
              <p class="card-content">
                <a href="tel:+15555551234" class="contact-link">
                  (555) 555-1234
                </a>
              </p>
              <p class="card-description">
                Available Monday - Friday, 9am - 6pm EST.
              </p>
            </div>

            <div class="contact-card">
              <div class="card-icon" aria-hidden="true">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <h2 class="card-title">Book a Session</h2>
              <p class="card-content">
                <a href={`${base}book/`} class="contact-link">
                  Request a Booking
                </a>
              </p>
              <p class="card-description">
                Fill out the booking form to schedule your photography session.
              </p>
            </div>
          </div>

          <!-- Business Hours & Social -->
          <div class="info-section">
            <div class="info-card">
              <h2 class="info-title">Business Hours</h2>
              <dl class="hours-list">
                <div class="hours-item">
                  <dt class="hours-day">Monday - Friday</dt>
                  <dd class="hours-time">9:00 AM - 6:00 PM</dd>
                </div>
                <div class="hours-item">
                  <dt class="hours-day">Saturday</dt>
                  <dd class="hours-time">10:00 AM - 4:00 PM</dd>
                </div>
                <div class="hours-item">
                  <dt class="hours-day">Sunday</dt>
                  <dd class="hours-time">By Appointment</dd>
                </div>
              </dl>
            </div>

            <div class="info-card">
              <h2 class="info-title">Follow Along</h2>
              <p class="info-description">
                See my latest work and behind-the-scenes content on social media.
              </p>
              <div class="social-links">
                <a href="#" class="social-link" aria-label="Instagram">
                  <svg fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" />
                  </svg>
                  Instagram
                </a>
                <a href="https://www.facebook.com/jodi.b.richardson/" class="social-link" aria-label="Facebook" target="_blank" rel="noopener noreferrer">
                  <svg fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                  </svg>
                  Facebook
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
      <div class="cta-container">
        <h2 class="cta-title">Ready to Start?</h2>
        <p class="cta-description">
          Fill out the booking form and I'll get back to you within 24 hours.
        </p>
        <a href={`${base}book/`} class="btn btn-primary">
          Book a Session
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .contact-page {
    background-color: var(--color-background);
  }

  /* Page Header */
  .page-header {
    background: linear-gradient(to bottom, var(--color-neutral-100), var(--color-surface));
    padding: var(--spacing-16) 0 var(--spacing-12);
  }

  .header-container {
    max-width: var(--container-lg);
    margin: 0 auto;
    padding: 0 var(--spacing-4);
    text-align: center;
  }

  .page-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-4);
  }

  .page-description {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Contact Section */
  .contact-section {
    padding: var(--spacing-16) 0;
  }

  .contact-container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--spacing-4);
  }

  .contact-grid {
    display: grid;
    gap: var(--spacing-12);
  }

  /* Contact Cards */
  .contact-cards {
    display: grid;
    gap: var(--spacing-6);
    grid-template-columns: 1fr;
  }

  .contact-card {
    background-color: var(--color-surface);
    padding: var(--spacing-8);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-base);
    text-align: center;
  }

  .card-icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto var(--spacing-4);
    color: var(--color-accent-600);
  }

  .card-icon svg {
    width: 100%;
    height: 100%;
  }

  .card-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-3);
  }

  .card-content {
    font-size: var(--font-size-lg);
    margin: 0 0 var(--spacing-3);
  }

  .contact-link {
    color: var(--color-accent-600);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color var(--transition-fast);
  }

  .contact-link:hover {
    color: var(--color-accent-700);
    text-decoration: underline;
  }

  .card-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  /* Info Section */
  .info-section {
    display: grid;
    gap: var(--spacing-6);
  }

  .info-card {
    background-color: var(--color-surface);
    padding: var(--spacing-8);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-base);
  }

  .info-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-6);
  }

  .info-description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0 0 var(--spacing-4);
  }

  /* Business Hours */
  .hours-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    margin: 0;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: var(--spacing-4);
    border-bottom: 1px solid var(--color-border);
  }

  .hours-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .hours-day {
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
  }

  .hours-time {
    color: var(--color-text-secondary);
  }

  /* Social Links */
  .social-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-3);
    color: var(--color-text-primary);
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
    font-weight: var(--font-weight-medium);
  }

  .social-link svg {
    width: 1.5rem;
    height: 1.5rem;
    flex-shrink: 0;
  }

  .social-link:hover {
    background-color: var(--color-neutral-100);
  }

  /* CTA Section */
  .cta-section {
    padding: var(--spacing-20) 0;
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
  }

  .cta-container {
    max-width: var(--container-md);
    margin: 0 auto;
    padding: 0 var(--spacing-4);
    text-align: center;
  }

  .cta-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-4);
  }

  .cta-description {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    margin: 0 0 var(--spacing-8);
  }

  .btn {
    display: inline-block;
    padding: var(--spacing-3) var(--spacing-6);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .btn-primary {
    background-color: var(--color-accent-600);
    color: var(--color-text-inverse);
  }

  .btn-primary:hover {
    background-color: var(--color-accent-700);
  }

  /* Responsive */
  @media (min-width: 768px) {
    .contact-cards {
      grid-template-columns: repeat(3, 1fr);
    }

    .contact-grid {
      grid-template-columns: 2fr 1fr;
      gap: var(--spacing-8);
    }

    .page-title {
      font-size: var(--font-size-5xl);
    }
  }
</style>
