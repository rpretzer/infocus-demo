---
/**
 * Footer Component
 * Site footer with copyright, credits, and social links
 */

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Business Info -->
      <div class="footer-section">
        <h3 class="footer-heading">In Focus with Jodi</h3>
        <p class="footer-text">
          Professional photography services capturing your most cherished moments.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="footer-section">
        <h3 class="footer-heading">Quick Links</h3>
        <nav aria-label="Footer navigation">
          <ul class="footer-links">
            <li><a href="/" class="footer-link">Home</a></li>
            <li><a href="/gallery" class="footer-link">Gallery</a></li>
            <li><a href="/contact" class="footer-link">Contact</a></li>
            <li><a href="/book" class="footer-link">Book a Session</a></li>
            <li><a href="/legal" class="footer-link">Legal</a></li>
          </ul>
        </nav>
      </div>

      <!-- Social Media (Placeholder) -->
      <div class="footer-section">
        <h3 class="footer-heading">Connect</h3>
        <ul class="footer-links">
          <li><a href="#" class="footer-link" aria-label="Instagram">Instagram</a></li>
          <li><a href="#" class="footer-link" aria-label="Facebook">Facebook</a></li>
          <li><a href="#" class="footer-link" aria-label="Email">Email</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="footer-copyright">
          &copy; {currentYear} In Focus with Jodi. All rights reserved.
        </p>
        <p class="footer-credit">
          Website created by <a href="https://www.stillgotitcollective.com/legal" class="credit-link" rel="noopener noreferrer" target="_blank">RSP Management Solutions</a>
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-neutral-900);
    color: var(--color-neutral-300);
    margin-top: auto;
  }

  .footer-container {
    max-width: var(--container-2xl);
    margin: 0 auto;
    padding: var(--spacing-12) var(--spacing-4) var(--spacing-6);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
    margin-bottom: var(--spacing-8);
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .footer-heading {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-inverse);
    margin: 0;
  }

  .footer-text {
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
    margin: 0;
    max-width: 300px;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-link {
    color: var(--color-neutral-300);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: color var(--transition-fast);
    display: inline-block;
  }

  .footer-link:hover {
    color: var(--color-accent-400);
  }

  /* Bottom Bar */
  .footer-bottom {
    padding-top: var(--spacing-6);
    border-top: 1px solid var(--color-neutral-700);
  }

  .footer-bottom-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    align-items: center;
    text-align: center;
  }

  .footer-copyright,
  .footer-credit {
    font-size: var(--font-size-sm);
    color: var(--color-neutral-400);
    margin: 0;
  }

  .credit-link {
    color: var(--color-accent-400);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color var(--transition-fast);
  }

  .credit-link:hover {
    color: var(--color-accent-300);
    text-decoration: underline;
  }

  /* Tablet and up */
  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(3, 1fr);
    }

    .footer-bottom-content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }
</style>
