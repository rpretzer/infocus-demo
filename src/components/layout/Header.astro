---
/**
 * Header Component
 * Main site navigation with mobile menu support
 * Fully keyboard accessible with ARIA labels
 */

const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;

const navItems = [
  { href: base, label: 'Home' },
  { href: `${base}/gallery`, label: 'Gallery' },
  { href: `${base}/contact`, label: 'Contact' },
  { href: `${base}/book`, label: 'Book a Session' },
  { href: `${base}/legal`, label: 'Legal' }
];

function isActive(href: string) {
  // Normalize paths for comparison
  const normalizedHref = href.endsWith('/') ? href : href + '/';
  const normalizedPath = currentPath.endsWith('/') ? currentPath : currentPath + '/';

  if (href === base || normalizedHref === base) {
    return normalizedPath === base;
  }
  return normalizedPath.startsWith(normalizedHref);
}
---

<header class="header">
  <div class="header-container">
    <div class="header-content">
      <!-- Logo/Brand -->
      <a href={base} class="brand" aria-label="In Focus with Jodi Home">
        <span class="brand-text">In Focus with Jodi</span>
      </a>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="mobile-menu-button"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Toggle navigation menu"
        id="mobile-menu-button"
      >
        <span class="sr-only">Open menu</span>
        <svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg class="close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <!-- Desktop Navigation -->
      <nav class="desktop-nav" aria-label="Main navigation">
        <ul class="nav-list">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={`nav-link ${isActive(item.href) ? 'nav-link-active' : ''}`}
                aria-current={isActive(item.href) ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          ))}
          <li>
            <button
              type="button"
              class="theme-toggle"
              aria-label="Toggle dark mode"
              id="theme-toggle"
            >
              <svg class="sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <svg class="moon-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </button>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Mobile Navigation -->
    <nav class="mobile-nav hidden" id="mobile-menu" aria-label="Mobile navigation">
      <ul class="mobile-nav-list">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={`mobile-nav-link ${isActive(item.href) ? 'mobile-nav-link-active' : ''}`}
              aria-current={isActive(item.href) ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
        <li>
          <button
            type="button"
            class="theme-toggle mobile-theme-toggle"
            aria-label="Toggle dark mode"
          >
            <svg class="sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <svg class="moon-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
            <span class="theme-toggle-text"></span>
          </button>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
  }

  .header-container {
    max-width: var(--container-2xl);
    margin: 0 auto;
    padding: 0 var(--spacing-4);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }

  /* Brand/Logo */
  .brand {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .brand:hover {
    color: var(--color-accent-600);
  }

  .brand-text {
    display: inline-block;
  }

  /* Theme Toggle Button */
  .theme-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-2);
    background: transparent;
    border: none;
    color: var(--color-text-primary);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
    cursor: pointer;
  }

  .theme-toggle:hover {
    background-color: var(--color-neutral-100);
  }

  .sun-icon,
  .moon-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Mobile Menu Button */
  .mobile-menu-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-2);
    background: transparent;
    border: none;
    color: var(--color-text-primary);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
  }

  .mobile-menu-button:hover {
    background-color: var(--color-neutral-100);
  }

  .menu-icon,
  .close-icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  .hidden {
    display: none;
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: none;
  }

  .nav-list {
    display: flex;
    gap: var(--spacing-1);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    display: inline-block;
    padding: var(--spacing-2) var(--spacing-4);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .nav-link:hover {
    color: var(--color-text-primary);
    background-color: var(--color-neutral-100);
  }

  .nav-link-active {
    color: var(--color-accent-600);
    background-color: var(--color-accent-50);
  }

  /* Mobile Navigation */
  .mobile-nav {
    padding: var(--spacing-4) 0;
    border-top: 1px solid var(--color-border);
  }

  .mobile-nav-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav-link {
    display: block;
    padding: var(--spacing-3) var(--spacing-4);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .mobile-nav-link:hover {
    color: var(--color-text-primary);
    background-color: var(--color-neutral-100);
  }

  .mobile-nav-link-active {
    color: var(--color-accent-600);
    background-color: var(--color-accent-50);
  }

  .mobile-theme-toggle {
    width: 100%;
    justify-content: flex-start;
    padding: var(--spacing-3) var(--spacing-4);
    gap: var(--spacing-3);
  }

  .theme-toggle-text {
    font-weight: var(--font-weight-medium);
  }

  /* Dark Mode - Manual override */
  html[data-theme='dark'] .header {
    background-color: var(--color-neutral-800);
    border-bottom-color: var(--color-neutral-700);
  }

  /* Dark Mode - System preference fallback */
  @media (prefers-color-scheme: dark) {
    html:not([data-theme]) .header {
      background-color: var(--color-neutral-800);
      border-bottom-color: var(--color-neutral-700);
    }

    html:not([data-theme]) .brand {
      color: var(--color-text-primary);
    }

    html:not([data-theme]) .brand:hover {
      color: var(--color-accent-400);
    }

    html:not([data-theme]) .theme-toggle {
      color: var(--color-text-primary);
    }

    html:not([data-theme]) .theme-toggle:hover {
      background-color: var(--color-neutral-700);
    }

    html:not([data-theme]) .mobile-menu-button {
      color: var(--color-text-primary);
    }

    html:not([data-theme]) .mobile-menu-button:hover {
      background-color: var(--color-neutral-700);
    }

    html:not([data-theme]) .nav-link {
      color: var(--color-text-secondary);
    }

    html:not([data-theme]) .nav-link:hover {
      color: var(--color-text-primary);
      background-color: var(--color-neutral-700);
    }

    html:not([data-theme]) .nav-link-active {
      color: var(--color-accent-400);
      background-color: var(--color-neutral-700);
    }

    html:not([data-theme]) .mobile-nav {
      border-top-color: var(--color-neutral-700);
    }

    html:not([data-theme]) .mobile-nav-link {
      color: var(--color-text-secondary);
    }

    html:not([data-theme]) .mobile-nav-link:hover {
      color: var(--color-text-primary);
      background-color: var(--color-neutral-700);
    }

    html:not([data-theme]) .mobile-nav-link-active {
      color: var(--color-accent-400);
      background-color: var(--color-neutral-700);
    }
  }

  /* Manual dark theme overrides */
  html[data-theme='dark'] .brand {
    color: var(--color-text-primary);
  }

  html[data-theme='dark'] .brand:hover {
    color: var(--color-accent-400);
  }

  html[data-theme='dark'] .theme-toggle {
    color: var(--color-text-primary);
  }

  html[data-theme='dark'] .theme-toggle:hover {
    background-color: var(--color-neutral-700);
  }

  html[data-theme='dark'] .mobile-menu-button {
    color: var(--color-text-primary);
  }

  html[data-theme='dark'] .mobile-menu-button:hover {
    background-color: var(--color-neutral-700);
  }

  html[data-theme='dark'] .nav-link {
    color: var(--color-text-secondary);
  }

  html[data-theme='dark'] .nav-link:hover {
    color: var(--color-text-primary);
    background-color: var(--color-neutral-700);
  }

  html[data-theme='dark'] .nav-link-active {
    color: var(--color-accent-400);
    background-color: var(--color-neutral-700);
  }

  html[data-theme='dark'] .mobile-nav {
    border-top-color: var(--color-neutral-700);
  }

  html[data-theme='dark'] .mobile-nav-link {
    color: var(--color-text-secondary);
  }

  html[data-theme='dark'] .mobile-nav-link:hover {
    color: var(--color-text-primary);
    background-color: var(--color-neutral-700);
  }

  html[data-theme='dark'] .mobile-nav-link-active {
    color: var(--color-accent-400);
    background-color: var(--color-neutral-700);
  }

  /* Tablet and up */
  @media (min-width: 768px) {
    .mobile-menu-button {
      display: none;
    }

    .desktop-nav {
      display: block;
    }

    .mobile-nav {
      display: none !important;
    }
  }
</style>

<script>
  // Mobile menu toggle functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';

      // Toggle aria-expanded
      mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));

      // Toggle menu visibility
      mobileMenu.classList.toggle('hidden');

      // Toggle icons
      const menuIcon = mobileMenuButton.querySelector('.menu-icon');
      const closeIcon = mobileMenuButton.querySelector('.close-icon');

      if (menuIcon && closeIcon) {
        menuIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      }
    });

    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      const target = event.target as HTMLElement;
      if (!mobileMenuButton.contains(target) && !mobileMenu.contains(target)) {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        if (isExpanded) {
          mobileMenuButton.click();
        }
      }
    });

    // Close menu on escape key
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        if (isExpanded) {
          mobileMenuButton.click();
          mobileMenuButton.focus();
        }
      }
    });
  }

  // Theme toggle functionality
  const themeToggles = document.querySelectorAll('.theme-toggle');
  const html = document.documentElement;

  // Update toggle button icons based on current theme
  const updateToggleIcons = (theme: string) => {
    themeToggles.forEach(toggle => {
      const sunIcon = toggle.querySelector('.sun-icon');
      const moonIcon = toggle.querySelector('.moon-icon');
      const text = toggle.querySelector('.theme-toggle-text');

      if (sunIcon && moonIcon) {
        if (theme === 'dark') {
          sunIcon.classList.add('hidden');
          moonIcon.classList.remove('hidden');
          if (text) text.textContent = 'Light Mode';
        } else {
          sunIcon.classList.remove('hidden');
          moonIcon.classList.add('hidden');
          if (text) text.textContent = 'Dark Mode';
        }
      }
    });
  };

  // Set theme
  const setTheme = (theme: string) => {
    html.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);
    updateToggleIcons(theme);
  };

  // Initialize icons based on current theme (set by inline script in <head>)
  const currentTheme = html.getAttribute('data-theme') || 'light';
  updateToggleIcons(currentTheme);

  // Toggle theme on button click (for all toggle buttons)
  themeToggles.forEach(toggle => {
    toggle.addEventListener('click', () => {
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      setTheme(newTheme);
    });
  });
</script>
